<div class="login-form">
<p id="alert"><%= alert %></p>
<h1 class="title font-weight-bold">LOGIN</h1>
<%= form_tag sessions_path do |form| %>
  <div class="input-form">
  <div class="form-group row">
    <%= label_tag :username, nil, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-9"><%= text_field_tag :email, nil, :class => "form-control", :placeholder => 'enter your username' %></div>
  </div>
  <div class="form-group row">
    <%= label_tag :password, nil, :class => "col-sm-3 col-form-label" %>
    <div class="col-sm-9"><%= password_field_tag :password, nil, :class => "form-control", :placeholder => 'enter your password' %></div>
  </div>
  <div class="checkbox">
	<label>
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
		<%= t('remember me') %>
	</label><br>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
</div>
<%= link_to "register", signup_path, class:"link-redirect" %>
</div>