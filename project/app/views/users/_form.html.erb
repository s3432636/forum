<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="signup-form">
  <h1 class="title">Signup</h1>

  <div class="form">

  <div class="form-group row">
  <%= form.label :username, class:"col-sm-3 col-form-label" %>
  <div class="col-sm-9"><%= form.text_field :username,class:"form-control", placeholder: 'enter user name' %></div>
  </div>

  <div class="form-group row">
    <%= form.label :email, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9"><%= form.text_field :email,class:"form-control", placeholder: 'enter email' %></div>
  </div>

  <div class="form-group row">
    <%= form.label :password, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9"><%= form.password_field :password,class:"form-control", placeholder: '8-20 characters' %></div>
  </div>

  <div class="form-group row">
    <%= form.label :password_confirmation, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9"><%= form.password_field :password_confirmation,class:"form-control", placeholder: 'confirm password' %></div>
  </div>

  <div class="form-group row">
    <%= form.label :mobile, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9"><%= form.text_field :mobile,class:"form-control", placeholder: 'mobile number' %></div>
  </div>

  <div class="actions">
  <%= form.submit %>
  </div>
  </div>
  <%= link_to "already a user?", login_path, class:"link-redirect"%>
  </div>
<% end %>
